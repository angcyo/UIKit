<?xml version="1.0" encoding="utf-8"?>
<com.angcyo.uiview.less.widget.group.RLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_bg_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/base_ldpi"
        android:paddingEnd="@dimen/base_xhdpi"
        android:paddingStart="@dimen/base_xhdpi"
        android:paddingTop="@dimen/base_ldpi">

    <com.angcyo.uiview.less.widget.GlideImageView
            android:id="@+id/base_image_view"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="centerCrop"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/base_xhdpi">

        <com.angcyo.uiview.less.widget.RTextView
                android:id="@+id/base_name_view"
                style="@style/BaseMainTextStyle"
                android:layout_width="match_parent"
                android:maxLines="2"
                android:ellipsize="middle"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                tools:text="Name"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.angcyo.uiview.less.widget.RTextView
                    android:id="@+id/base_tip_view"
                    style="@style/BaseDarkTextStyle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    tools:text="12 MB"/>

            <com.angcyo.uiview.less.widget.RTextView
                    android:id="@+id/base_auth_view"
                    style="@style/BaseDarkTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="@dimen/base_xxxhdpi"
                    android:textSize="12dp"
                    tools:text="drw"/>

            <com.angcyo.uiview.less.widget.RTextView
                    android:id="@+id/base_time_view"
                    style="@style/BaseDarkTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textSize="12dp"
                    tools:text="2017/10/25"/>

        </LinearLayout>

        <com.angcyo.uiview.less.widget.RTextView
                android:id="@+id/base_md5_view"
                style="@style/BaseDarkTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="MD5:%1$s"
                android:textSize="12dp"
                android:visibility="gone"
                tools:text="1923847938751235"/>

    </LinearLayout>

</com.angcyo.uiview.less.widget.group.RLinearLayout>
