<?xml version="1.0" encoding="utf-8"?>
<com.angcyo.uiview.less.widget.group.RCoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--背景behavior层-->
    <FrameLayout
        android:id="@+id/base_behavior_bg_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/base_orange_dark"
        tools:layout_behavior="com.angcyo.uiview.less.widget.behavior.BackgroundBehavior" />

    <!--内容层-->
    <FrameLayout
        android:id="@+id/base_content_wrapper_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/base_orange_dark"
        tools:layout_behavior="com.angcyo.uiview.less.widget.behavior.ContentBehavior" />

    <!--标题栏-->
    <com.angcyo.uiview.less.widget.group.TitleBarLayout
        android:id="@+id/base_title_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@color/transparent_dark"
        tools:layout_behavior="com.angcyo.uiview.less.widget.behavior.TitleBarBehavior">

        <!--动态添加配置-->
    </com.angcyo.uiview.less.widget.group.TitleBarLayout>

</com.angcyo.uiview.less.widget.group.RCoordinatorLayout>