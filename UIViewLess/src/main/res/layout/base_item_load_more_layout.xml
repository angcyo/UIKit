<?xml version="1.0" encoding="utf-8"?>
<com.angcyo.uiview.less.recycler.widget.ItemLoadMoreLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/base_load_more_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_chat_bg_color">

    <!--正在加载更多-->
    <include layout="@layout/base_load_more_layout"
             android:visibility="gone"/>

    <!--我是有底线的-->
    <include layout="@layout/base_load_no_more_layout"
             android:visibility="gone"/>

    <!--网络异常-->
    <include layout="@layout/base_load_error_layout"
             android:visibility="gone"/>

</com.angcyo.uiview.less.recycler.widget.ItemLoadMoreLayout>
