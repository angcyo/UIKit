<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <com.angcyo.uiview.less.widget.group.MatrixLayout
            android:id="@+id/base_matrix_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <!--用来做图片切换-->
        <com.angcyo.uiview.less.widget.pager.RViewPager
                android:id="@+id/base_view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <!--用来执行动画-->
        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/base_preview_view"
                android:layout_width="wrap_content"
                android:scaleType="fitCenter"
                android:layout_height="wrap_content"/>

    </com.angcyo.uiview.less.widget.group.MatrixLayout>

    <com.angcyo.uiview.less.widget.pager.TextIndicator
            android:id="@+id/base_text_indicator_view"
            style="@style/BaseDarkTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/action_bar_height"
            android:textSize="@dimen/default_text_little_size"
            android:visibility="invisible"
            android:textColor="@color/base_white"
            tools:text="100/100"
            tools:visibility="visible"/>

</merge>