<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/base_error_root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tag="error">

    <LinearLayout
            android:id="@+id/base_error_wrap_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/base_error_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/colorAccent"
                android:src="@drawable/base_ico_load_fail"/>

        <TextView
                android:id="@+id/base_error_tip_view"
                style="@style/BaseMainTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:text="@string/error_tip"
                android:textColor="@color/default_base_border"
                android:textSize="@dimen/default_text_little_size"/>
    </LinearLayout>

</FrameLayout>
