<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:minHeight="70dp"
        android:background="@drawable/base_bg2_selector_v21"
        android:paddingTop="@dimen/base_xhdpi"
        android:paddingBottom="@dimen/base_xhdpi"
        android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatImageView
            android:id="@+id/image_view"
            android:scaleType="centerInside"
            tools:background="@drawable/base_red_circle_shape"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:src="@drawable/ucrop_ic_cross"
            android:layout_width="wrap_content"
            android:minWidth="50dp"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_height="0dp"/>

    <TextView
            android:id="@+id/text_view"
            style="@style/BaseMainTextStyle"
            android:text="文本"
            android:textSize="@dimen/default_text_little_size"
            app:layout_constraintLeft_toLeftOf="@id/image_view"
            app:layout_constraintRight_toRightOf="@id/image_view"
            android:layout_marginTop="@dimen/base_ldpi"
            app:layout_constraintTop_toBottomOf="@id/image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


</android.support.constraint.ConstraintLayout>