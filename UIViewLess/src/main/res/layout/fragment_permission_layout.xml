<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/permission_bg">

    <TextView
        android:id="@+id/permission_title"
        style="@style/BaseMainTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/action_bar_height"
        android:gravity="center"
        android:lineSpacingExtra="10dp"
        android:padding="@dimen/base_xxhdpi"
        tools:text="为了更好的服务体验, \n程序需要以下权限" />

    <com.angcyo.uiview.less.recycler.RRecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:overScrollMode="never"
        android:tag="GV2" />

    <com.angcyo.uiview.less.widget.Button
        android:id="@+id/enable_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/base_xxhdpi"
        android:layout_marginRight="@dimen/base_xxhdpi"
        android:layout_marginBottom="@dimen/base_xxxhdpi"
        android:minHeight="45dp"
        android:text="开启权限"
        android:textColor="@color/base_white"
        app:r_button_style="ROUND_GRADIENT_RECT" />

</FrameLayout>