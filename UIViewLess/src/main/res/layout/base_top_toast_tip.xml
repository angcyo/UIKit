<?xml version="1.0" encoding="utf-8"?>
<com.angcyo.uiview.less.widget.group.RFrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/base_toast_root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_round_tran80"
        android:minHeight="40dp"
        android:layout_marginLeft="@dimen/base_xxhdpi"
        android:layout_marginRight="@dimen/base_xxhdpi"
        android:layout_marginTop="@dimen/action_bar_height"
        android:padding="@dimen/base_xhdpi">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/base_toast_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/base_xhdpi"
                android:visibility="gone"
                tools:src="@drawable/base_tip_ico"/>

        <com.angcyo.uiview.less.widget.RTextView
                android:id="@+id/base_toast_text_view"
                style="@style/BaseMainTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/base_white"
                tools:text="测试内容测试内容测试内容测试内容测试内容测试内容"/>
    </LinearLayout>

</com.angcyo.uiview.less.widget.group.RFrameLayout>